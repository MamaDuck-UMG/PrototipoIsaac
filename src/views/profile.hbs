<div class='container p-4'>
	<div class='row'>
		<div class='col-md-4 mx-auto'>
			<div class='card text-center'>
				<div class='card-body'>
					<h3>Welcome {{user.username}}</h3>
				</div>
			</div>
		</div>
	</div>
	<section>
		<div class='container'>
			<div id='map-template'></div>
		</div>
		<div class='container' id='coordinates' style='display:none;'>
			{{#each history}}
				{{#if lati}}
					<p>{{lngi}}</p>
					<h1>{{lati}}</h1>
				{{/if}}
			{{/each}}
		</div>
		<h5>Call history</h5>
		<div class='container'>
			<table id='datatable' class='table table-dark' style='width:100%'>
				<thead>
					<tr>
						<th>Fecha</th>
						<th>Lugar</th>
						<th>Emergencia</th>
						<th>Necesidad</th>
						<th>Mensaje</th>
						<th>Latitud</th>
						<th>Longitud</th>
					</tr>
				</thead>
				<tbody>
					{{#each history}}
						<tr>
							<th>{{date}}</th>
							<th>{{place}}</th>
							<th>{{emergency}}</th>
							<th>{{need}}</th>
							<th>{{message}}</th>
							<th>{{lati}}</th>
							<th>{{lngi}}</th>
						</tr>
					{{/each}}
				</tbody>
				<tfoot>
				</tfoot>
			</table>
		</div>
	</section>
</div>