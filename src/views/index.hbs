<div class='container p-9'>
	<div class='row'>
		<div class='col-md-6 mx-auto'>
			<div class='card'>
				<div class='card-body'>
					<button
						autofocus
						class='btn-ubi'
						id='find-me'
						onclick='change_text()'
					>Allow Location</button>
					<a id='map-link' target='_blank'></a>
					<h2>Location:</h2>
					<div id='map-template'></div>
					<form action='/form/add' method='POST'>
						<h2>What is your emergency?</h2>
						<div class='img-btn'>
							<button
								type='submit'
								id='btn-form'
								name='emergency'
								value='Medic'
							><img
									src='img/Medic_en.png'
									id='btn-form'
									alt='Submit'
								/></button>
							<button
								type='submit'
								id='btn-form'
								name='emergency'
								value='SOS'
							><img
									src='img/SOS_en.png'
									id='btn-form'
									alt='Submit'
								/></button>
						</div>
						<div class='img-btn'>
							<button
								type='submit'
								id='btn-form'
								name='emergency'
								value='Fire'
							><img
									src='img/Fire_en.png'
									id='btn-form'
									alt='Submit'
								/></button>
							<button
								type='submit'
								id='btn-form'
								name='emergency'
								value='Flood'
							><img
									src='img/Flood_en.png'
									id='btn-form'
									alt='Submit'
								/></button>
						</div>
						<textarea
							name='lati'
							id='lat'
							cols='20'
							rows='1'
							style='display:none;'
						></textarea>
						<textarea
							name='lngi'
							id='lng'
							cols='20'
							rows='1'
							style='display:none;'
						></textarea>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	function change_text(){ document.getElementById("find-me").innerHTML =
	"Location enabled";$("#find-me").addClass('btn-clicked'); };
</script>