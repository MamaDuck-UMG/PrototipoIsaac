<div class="container p-4">
    <div class="row">
        {{#each admin}}
            {{#ifEquals username ../user.username}}
            {{else}}
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                                <h3 class="card-title text-uppercase">
                                    {{fullname}}
                                </h3>
                            <a class="btn btn-danger" href="/admin/delete/{{id}}">
                                Delete
                            </a>
                            <a class="btn btn-secondary" href="/admin/edit/{{id}}">
                                Edit
                            </a>
                        </div>
                    </div>
                </div>
            {{/ifEquals}}
        {{/each}}
    </div>
</div> 