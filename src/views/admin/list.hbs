<div class="container p-4">
    <div class="row">
        {{#each admin}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{fullname}}
                        </h3>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/admin/delete/{{id}}">
                        Delete
                    </a>
                    <a class="btn btn-secondary" href="/admin/edit/{{id}}">
                        Edit
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not Admins saved yet.</p>
                <a href="/admin/add">Add one</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>